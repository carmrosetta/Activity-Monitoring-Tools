<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ing.unipi.it.activitymonitoringtools.Tools_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <RelativeLayout
            android:id="@+id/sensorLogRelLayout"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight">

            <ImageView
                android:id="@+id/toolIconSensorLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingTop="15dip"
                android:src="@drawable/ic_action_paste" />


            <TextView
                android:id="@+id/tvSensorLog"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/toolIconSensorLog"
                android:layout_toLeftOf="@+id/toggleEnableSensorLog"
                android:layout_toRightOf="@+id/toolIconSensorLog"
                android:layout_toStartOf="@+id/toggleEnableSensorLog"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="Sensor Log"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <ToggleButton
                android:id="@+id/toggleEnableSensorLog"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:layout_toLeftOf="@+id/settingsButtonSensorLog"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textOff="OFF"
                android:textOn="ON" />

            <ImageButton
                android:id="@+id/settingsButtonSensorLog"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_settings" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gaitRecRelLayout"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_below="@+id/sensorLogRelLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/toolIconGaitRec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingTop="15dip"
                android:src="@drawable/ic_action_search" />


            <TextView
                android:id="@+id/tvGaitRec"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/toolIconGaitRec"
                android:layout_toLeftOf="@+id/toggleEnableGaitRec"
                android:layout_toRightOf="@+id/toolIconGaitRec"
                android:layout_toStartOf="@+id/toggleEnableGaitRec"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="Gait Recognition"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <ToggleButton
                android:id="@+id/toggleEnableGaitRec"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:layout_toLeftOf="@+id/settingsButtonGaitRec"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textOff="OFF"
                android:textOn="ON" />

            <ImageButton
                android:id="@+id/settingsButtonGaitRec"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_settings" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postureDetectRelLayout"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_below="@+id/gaitRecRelLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/toolIconPostureDetect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingTop="15dip"
                android:src="@drawable/ic_action_screen_rotation" />


            <TextView
                android:id="@+id/tvPostureDetect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/toolIconPostureDetect"
                android:layout_toLeftOf="@+id/toggleEnablePostureDetect"
                android:layout_toRightOf="@+id/toolIconPostureDetect"
                android:layout_toStartOf="@+id/toggleEnablePostureDetect"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="Posture Detection"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <ToggleButton
                android:id="@+id/toggleEnablePostureDetect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:layout_toLeftOf="@+id/settingsButtonPostureDetect"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textOff="OFF"
                android:textOn="ON" />

            <ImageButton
                android:id="@+id/settingsButtonPostureDetect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_settings" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/impactDetectRelLayout"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_below="@+id/postureDetectRelLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/toolIconImpactDetect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingTop="15dip"
                android:src="@drawable/ic_action_warning" />


            <TextView
                android:id="@+id/tvImpactDetect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/toolIconImpactDetect"
                android:layout_toLeftOf="@+id/toggleEnableImpactDetect"
                android:layout_toRightOf="@+id/toolIconImpactDetect"
                android:layout_toStartOf="@+id/toggleEnableImpactDetect"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="Impact Detection"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <ToggleButton
                android:id="@+id/toggleEnableImpactDetect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:layout_toLeftOf="@+id/settingsButtonImpactDetect"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textOff="OFF"
                android:textOn="ON" />

            <ImageButton
                android:id="@+id/settingsButtonImpactDetect"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:src="@drawable/ic_action_settings" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnStartServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/impactDetectRelLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Start" />


    </RelativeLayout>

</ScrollView>